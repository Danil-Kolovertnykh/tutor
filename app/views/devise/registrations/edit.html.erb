<%=  render partial: "blocks/header"  %>

<h2>Введите свои данные</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>



  <div class="col-md-5">
    <label for="group" class="group">Группа</label>
    <select class="form-select" id="group" >
      <% @title_group_all.each do |group| %>
      <option value= <%= group.id %>><%= group.title %></option>
      <% end %>
    </select>

  </div>

  <div class="col-md-5">
    <%= f.label "Ваше имя", :class=>"form-label" %><br />
    <%= f.text_field :name, :class =>"form-control", autofocus: true, autocomplete: "Имя" %>
  </div>
  <div class="col-md-5">
    <%= f.label "Ваша фамилия", :class=>"form-label" %><br />
    <%= f.text_field :surname, :class =>"form-control", autofocus: true, autocomplete: "Фамилия" %>
  </div>
  <div class="col-md-5">
    <%= f.label "Ваша почта" %><br />
    <%= f.email_field :email, :class =>"form-control", autofocus: true, autocomplete: "Email" %>
  </div>



  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="col-md-5">
    <%= f.label "Новый пароль", :class=>"form-label"%> <i>(оставьте пустым, если не хотите его менять)</i><br />
    <%= f.password_field :password, :class =>"form-control", autocomplete: "new-password" %>

  </div>

  <div class="col-md-5">
    <%= f.label "Повторите новый пароль" , :class=>"form-label"%><br />
    <%= f.password_field :password_confirmation, :class =>"form-control", autocomplete: "new-password" %>
  </div>

  <div class="col-md-5">
    <%= f.label "Текущий пароль", :class=>"form-label" %> <i>(нам нужен ваш текущий пароль, чтобы подтвердить ваши изменения)</i><br />
    <%= f.password_field :current_password, :class =>"form-control", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class=>"btn btn-primary btn-lg px-4 me-sm-3" %>
  </div>

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
